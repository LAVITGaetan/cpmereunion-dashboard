<%- include('../includes/header.ejs') %>
<%- include('../includes/navbar.ejs') %>
<%- include('../includes/message.ejs') %>
<div class="content">
                <h1 class="header-title">Liste des adhérents</h1>
                <div class="flex-between">
                    <div class="searchbox">
                        <input class="searchbox-input" type="text" placeholder="Recherche" onkeyup="searchAdherent()"
                            id="search"></input>
                        <div onclick="searchAdherent()" class="searchbox-action"><img width="20px" height="20px"
                                src="/img/search.png" alt="search"></div>
                    </div>
                    <a href="/add-adherent" class="cta">Nouvel adhérent</a>
                </div>
                <div class="filter">
                    <div class="filter-item filter-selected" onclick="changeFilter(0)">Tous</div>
                    <div class="filter-item" onclick="changeFilter(1)">Artisanat</div>
                    <div class="filter-item" onclick="changeFilter(2)">Commerce</div>
                    <div class="filter-item" onclick="changeFilter(3)">Industrie</div>
                    <div class="filter-item" onclick="changeFilter(4)">Services</div>
                </div>
                <div class="flex">
                    <div class="search-result"><span id="js-result">
                            <%= adherents.length %>
                        </span> résultats trouvés</div>
                    <% adherents.forEach(adherent=> { %>
                        <div class="adherent card">
                            <div class="card-header"></div>
                            <div class="card-figure">
                                <% if (adherent.logo ) { %>
                                    <img class="card-image" src="<%= adherent.logo %>">
                                    <% }else{ %>
                                        <img class="add-photo" width="24px" height="24px" src="img/no-photo.png">
                                        <% } %>
                            </div>
                            <div class="card-title js-entreprise">
                                <%= adherent.entreprise %>
                            </div>
                            <div class="card-subtitle js-section">
                                <%= adherent.section %>
                            </div>
                            <a href="/profil-adherent?id=<%= adherent._id %>" class="no-decoration card-edit">
                                <img src="img/edit.png" width="12px" height="12px" alt="edit">
                            </a>
                            <a href="/adherents/delete/<%=adherent._id%>" class="card-delete">
                                <img src="img/delete.png" width="12px" height="12px" alt="delete">
                            </a>
                        </div>
                        <% }) %>
                </div>
            </div>
            <%- include('../includes/succes.ejs') %>
    </body>
    <script src="js/index.js">
    </script>

    </html>